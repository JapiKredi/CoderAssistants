{
  "endpoint" : "https://api.openai.com/v1/chat/completions",

  "headers": {
    "Content-Type": "application/json",
    "Authorization": "Bearer <<api_key>>"
  },

  "payload": {
    "model": "<<model>>",
    "messages": [{"role": "user", "content": "<<input_text>>"}],
    "temperature": 0.0
  }
}
